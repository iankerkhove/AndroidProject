<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ian.werkstuk.DetailActivity"
    tools:showIn="@layout/activity_detail">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow>
        <TextView
            android:id="@+id/tagline"
            android:layout_column="1"
            android:padding="3dip"
            android:textSize="15dip"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Release date: "
            android:textStyle="bold"
            android:layout_column="1"
            android:padding="3dip"/>
        <TextView
            android:id="@+id/releaseDate"
            android:gravity="left"
            android:layout_width="wrap_content"/>
        </TableRow>
    <TableRow>
        <TextView
            android:text="Original Language: "
            android:textStyle="bold"
            android:layout_column="1"
            android:padding="3dip"/>
        <TextView
            android:id="@+id/originalLanguage"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/spokenLanguageLabel"
            android:text="Spoken Language(s): "
            android:textStyle="bold"
            android:layout_column="1"
            android:padding="3dip"/>
        <TextView
            android:id="@+id/spokenLanguage"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Genre(s): "
            android:layout_column="1"
            android:textStyle="bold"
            android:padding="3dip"/>
        <TextView
            android:id="@+id/genres"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Status: "
            android:textStyle="bold"
            android:layout_column="1"
            android:padding="3dip"/>
        <TextView
            android:id="@+id/status"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/prodCountryLabel"
            android:text="Production country(s): "
            android:textStyle="bold"
            android:layout_column="1"
            android:padding="3dip"/>
        <TextView
            android:id="@+id/prodCountry"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Vote average: "
            android:textStyle="bold"
            android:layout_column="1"
            android:padding="3dip"/>
        <TextView
            android:id="@+id/voteAverage"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Overview: "
            android:textStyle="bold"
            android:layout_column="1"
            android:padding="3dip"/>
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/overview"/>
    </LinearLayout>
</TableLayout>


</android.support.v4.widget.NestedScrollView>
