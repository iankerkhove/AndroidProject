<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ian.werkstuk.FavoriteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_favmov"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/labelFavoriteM"
            android:layout_below="@+id/labelDiscover"
            android:textAlignment="center"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movieView"
            android:divider="@color/colorAccent"
            android:dividerHeight="1dp"
            android:layout_below="@+id/labelFavoriteM"></ListView>
        <TextView
            android:id="@+id/labelFavoriteT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_favtv"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/movieView"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvView"
            android:divider="@color/colorAccent"
            android:dividerHeight="1dp"
            android:layout_below="@+id/labelFavoriteT"></ListView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
